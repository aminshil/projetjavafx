<AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ChatBotController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="ChatBot" textFill="#0c2d48">
            <font>
                <Font name="System Bold Italic" size="24.0" />
            </font>
        </Label>
        <TextArea fx:id="chatArea" editable="false" layoutX="14.0" layoutY="52.0" prefHeight="442.0" prefWidth="372.0" />
        <TextField fx:id="inputTextField" layoutX="14.0" layoutY="504.0" prefHeight="47.0" prefWidth="372.0" onAction="#processInput" />
        <Button layoutX="14.0" layoutY="557.0" mnemonicParsing="false" onAction="#processInput" text="Send" />
    </children>
</AnchorPane>